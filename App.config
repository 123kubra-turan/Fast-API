<?xml version="1.0" encoding="utf-8"?>
<!--
  App.config
  Uygulama yapılandırma dosyası.
  Buraya uygulama başlangıcı, çalışma zamanı, bağlantı stringleri ve diğer ayarlar eklenebilir.
  Gerektiğinde genişletebilirsiniz.
-->
<configuration>
  <!-- Uygulamanın .NET Framework ile başlatılması -->
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>

  <!-- Çalışma zamanı ve assembly yönlendirmeleri -->
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <!-- Bağımlılıkların doğru sürüme yönlendirilmesi -->
      <dependentAssembly>
        <assemblyIdentity name="System.Runtime.CompilerServices.Unsafe" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Memory" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.1.2" newVersion="4.0.1.2" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>

  <!-- 
    Buraya gerekirse bağlantı stringleri, uygulama ayarları veya diğer config bölümleri ekleyebilirsiniz.
    Örnek:
    <connectionStrings>
      <add name="DefaultConnection" connectionString="..." providerName="System.Data.SqlClient" />
    </connectionStrings>
    <appSettings>
      <add key="Theme" value="light" />
    </appSettings>
  -->
</configuration>
